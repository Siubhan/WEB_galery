extends template
block link
	-var title = 'Каталог'
	link(rel="stylesheet", href="./css/bootstrap-reboot.min.css")
	link(rel="stylesheet", href="./css/main.css")
block content
	nav
		+createNav([['Главная','index.html',0], ['Афиша','afisha.html',0], ['Каталог','catalog.html',1]])
	main
		h1 Демо-версия таблицы, переносить всю - издевательство
		.row
			table
				tbody
					tr
						th Автор
						th Название
						th Жанр
						th Страна
						th Год
						th Количество реплик
					-var i = 0;
					while i < 50
						tr
							td Исаак Ильич Левитан
							td Над вечным покоем
							td Пейзаж
							td Россия
							td= 1894+i
							td= i
						-i++;

block footer
	footer
		.footer-item
			ul.list
				li
					a(href="/index.html")="Главная"
				li
					a(href="/afisha.html")="Афиша"
				li
					a(href="/catalog.html")="Каталог"
		.footer-item
			p © Картинная галерея, 2022-2023
block scripts
	script(src="js/jquery-3.5.1.min.js")
	script(src="js/main.js")
