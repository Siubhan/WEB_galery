extends template
block link
	-var title = 'Галерея: Каталог'
	link(rel="stylesheet", href="./css/bootstrap-reboot.min.css")
	link(rel="stylesheet", href="./css/main.css")
	link(rel="stylesheet", href="./css/venobox.min.css")
	
block content
	nav
		+createNav([['Главная','index.html',0], ['Афиша','afisha.html',0], ['Каталог','catalog.html',1]])
	main
		.back-pictures
			.row
				a.my-link(data-gall="myGallery", href="img/3.jpg")
					img(src="img/3.jpg", class = "galImg")
				a.my-link(data-gall="myGallery", href="img/1.jpg")
					img(src="img/1.jpg", class = "galImg")
				a.my-link(data-gall="myGallery", href="img/4.jpg")
					img(src="img/4.jpg", class = "galImg")
		br
		.row
			details
				summary График
				form
					table
						tr
							th Значениe по оси OX
							th Результат
						tr
							td
								input(type="radio" name="ox" checked)
								| Год
							td
								input(type="radio" name="oy" checked)
								| Количество реплик
								
					input(type="button" value="Построить" onclick="buildChart(this.form.ox.checked, this.form.oy.checked)")
					div.chart 
		.row
			details
				summary Фильтр
				form
					label(for="author") Автор
					input(type="text" name="author")
					br
					label(for="genre") Жанр
					input(type="text" name="genre")
					br
					input(type="button" value="Найти" onclick="filterTable(this.form.author.value, this.form.genre.value)")
		.row
			details
				summary Сортировка
				form
					| Первый уровень:
					select(name="sortFirst")
						option(value="0")="Нет"
						option(value="1")="Автор"
						option(value="2")="Жанр"
						option(value="3")="Страна"
					| &nbsp; по убыванию?
					input(type="checkbox" name="descFirst")
					br
					| Второй уровень:
					select(name="sortSecond")
						option(value="0")="Нет"
						option(value="1")="Автор"
						option(value="2")="Жанр"
						option(value="3")="Страна"
					| &nbsp; по убыванию?
					input(type="checkbox" name="descSecond")
					br
					| Третий уровень:
					select(name="sortThird")
						option(value="0")="Нет"
						option(value="1")="Автор"
						option(value="2")="Жанр"
						option(value="3")="Страна"
					| &nbsp; по убыванию?
					input(type="checkbox" name="descThird")
					br
					input(type="button" value="Сортировать" onclick="howSortTable(this.form.sortFirst.value, this.form.descFirst.checked,this.form.sortSecond.value, this.form.descSecond.checked, this.form.sortThird.value, this.form.descThird.checked)")

		.row
			table#table
				thead
					tr
						th Автор
						th Название
						th Жанр
						th Страна
						th Год
						th Количество реплик
				tbody
					-var i = 0;
					while i < 10
						tr
							td Исаак Ильич Левитан
							td Над вечным покоем
							td Пейзаж
							td Россия
							td= Math.floor(Math.random() * 10)+1960
							td= Math.floor(Math.random()* 20)+i%10
						-i++;
					while i < 30
						tr
							td Художник 1
							td= `Названиe ${i}`
							td Портрет
							td Болгария
							td= Math.floor(Math.random() * 10)+1960
							td= Math.floor(Math.random()* 20)+i%10
						-i++;
					while i < 49
						tr
							td Художник 2
							td= `Названиe ${i}`
							td Пейзаж
							td Сербия
							td= Math.floor(Math.random() * 10)+1960
							td= Math.floor(Math.random()* 20)+i%10
						-i++;
					tr
						td Художник 2
						td= `Названиe ${i}`
						td Портрет
						td Сербия
						td= Math.floor(Math.random() * 10)+1960
						td= Math.floor(Math.random()* 20)+i%10
					-i++;

block footer
	footer
		.footer-item
			ul.list
				li
					a(href="/index.html")="Главная"
				li
					a(href="/afisha.html")="Афиша"
				li
					a(href="/catalog.html")="Каталог"
		.footer-item
			p © Картинная галерея, 2022-2023
block scripts
	script(src="http://d3js.org/d3.v3.min.js")
	script(src="js/jquery-3.5.1.min.js")
	script(src="js/venobox.min.js")
	script(src="js/main.js")
