body
	font-size 14px
	font-family arial
main
	margin 0 auto
	max-width 700px
	min-height 700px
	height 100%
	border-left thin solid #cccccc
	border-right thin solid #cccccc
	& p
		text-align justify
		line-height 2
		word-spacing 2px
		text-indent 1.5em
	& h1
		text-align center
nav
	display block
	background-color #333333
	margin 0 auto
	padding-top 10px
	& ul
		display flex
		flex-direction row
		padding 10px
		max-width 700px
		margin 0 auto
		width auto
		justify-content space-evenly
		& li.active
			background-color #707070
			text-decoration underline
			color white
		& li
			display flex
			flex-direction column
			padding 10px
			& a
				font-size 12pt
				text-decoration none
				color white
			& a:hover
				color black
				text-decoration underline
.post
	display block
	padding 0 10px
	border-top thin solid grey
	& h5
		font-size 10pt
		margin 0 auto
		text-align center
		display flex
		flex-direction column
		width 15%
		height 20%
	& img
		display flex
		justify-content center
		flex-wrap  wrap
		max-width 500px
		width 100%
		height auto
		margin 0 auto
	& a
		margin 0
		padding 0
	& p
		display flex
		justify-content center
		margin-bottom 0
		padding-bottom 0
	& p:last-child
		font-style italic
	&:last-child
		border-bottom thin solid grey


.main-image
	display flex
	flex-direction column
	padding-bottom 5px



.row
	display flex
	flex-flow row nowrap
	max-width 100%
	width auto
	justify-content center
	& .column
		display flex
		flex-flow column nowrap
		align-items center
		justify-content center
		width auto
		& img
			display flex
			flex-flow column wrap
			overflow hidden
			padding 2px
			float left
			width  150px
			height 150px
			object-fit cover
			&:hover
				border thick solid #89e3d9
		& p
			padding 5px
		a
			text-decoration none
			color black
			&:hover
				text-decoration underline
				color #508d86
table
	display flex
	flex-flow row nowrap
	align-items center
	max-width 100%
	width auto
	border thin solid black
	& tr
		border thin solid black
		&:nth-child(2n+1)
			background-color #9d9d9d
		& td
			text-align center
			width auto


footer
	margin 0 auto
	background-color #333333
	display block
	& .footer-item
		display flex
		flex-direction row
		max-width 700px
		width auto
		margin 0 auto
		& ul
			display inherit
			flex-direction row
			width 100em
			max-width 100%
			align-items center
			justify-content space-evenly
			margin 0 auto
			list-style none
			& li
				padding 10px
				font-size 12pt
				& a
					color white
				& a:hover
					color black
		& p
			color white
			width 100em
			max-width 100%
			display inherit
			flex-direction row
			align-items flex-end
			border-top thin solid white

@media(max-width:600px)
	main
		width auto
		max-width 100%
		min-height 100%
		& .content
			flex-grow 1
			& .line-img
				flex-direction column-reverse
			& .galery-3
				width auto
			& .galery-4
				width auto
			& .long-img
				width auto
				flex-direction column
	nav
	& ul
		flex-flow column wrap
		& li
			align-self center

	video
		width 100%

	.row
		flex-wrap wrap
		& .column
			flex-flow column wrap
	table
		overflow-x auto




