mixin createNav(listLi)
	.nav-item
	ul
		each name in listLi
			if name[2] == 1
				li.active
					a(href=name[1])= name[0]
			else
				li
					a(href=name[1])= name[0]


doctype html
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		block link
		title #{title}
	body
		block nav
		block content
		block footer
		block scripts
